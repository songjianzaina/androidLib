<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.zhowin.library.radius.RadiusTextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="改变选择背景"
            android:textColor="#fff"
            android:textSize="14sp"
            app:rv_backgroundColor="@android:color/holo_orange_light"
            app:rv_backgroundPressedColor="@android:color/holo_blue_bright"
            app:rv_radius="6dp" />

        <com.zhowin.library.radius.RadiusTextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="改变选择背景(圆角)"
            android:textColor="#fff"
            android:textSize="14sp"
            app:rv_backgroundColor="@android:color/holo_orange_light"
            app:rv_backgroundPressedColor="@android:color/holo_blue_bright"
            app:rv_radius="6dp"
            app:rv_radiusHalfHeightEnable="true" />

        <com.zhowin.library.radius.RadiusTextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="描边"
            android:textSize="14sp"
            app:rv_backgroundColor="#FFF"
            app:rv_radiusHalfHeightEnable="true"
            app:rv_strokeColor="@android:color/holo_blue_bright"
            app:rv_strokePressedColor="@android:color/holo_orange_light"
            app:rv_strokeWidth="1dp"
            app:rv_textColor="@android:color/holo_orange_light"
            app:rv_textPressedColor="@android:color/holo_blue_bright" />


        <com.zhowin.library.radius.RadiusEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:hint="请输入信息"
            android:paddingLeft="10dp"
            android:textColor="#333"
            android:textColorHint="#999"
            android:textSize="14sp"
            app:rv_backgroundColor="#eee"
            app:rv_radius="5dp"
            app:rv_strokeColor="@android:color/holo_orange_light"
            app:rv_strokeWidth="1dp" />

        <com.zhowin.library.radius.RadiusLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            app:rv_backgroundColor="@android:color/holo_blue_bright"
            app:rv_backgroundPressedColor="@android:color/holo_orange_light">


            <com.zhowin.library.radius.RadiusCheckBox
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:button="@null"
                app:rv_backgroundColor="#fff"
                app:rv_strokeColor="@android:color/holo_blue_bright"
                app:rv_strokePressedColor="@android:color/holo_orange_light"
                app:rv_strokeWidth="2dp" />

            <com.zhowin.library.radius.RadiusTextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="描边"
                android:textSize="14sp"
                app:rv_backgroundColor="#FFF"
                app:rv_radiusHalfHeightEnable="true"
                app:rv_strokeColor="@android:color/holo_blue_bright"
                app:rv_strokePressedColor="@android:color/holo_orange_light"
                app:rv_strokeWidth="1dp"
                app:rv_textColor="@android:color/holo_orange_light"
                app:rv_textPressedColor="@android:color/holo_blue_bright" />
        </com.zhowin.library.radius.RadiusLinearLayout>


    </LinearLayout>

</ScrollView>