<?xml version="1.0" encoding="utf-8"?>
<com.zhowin.library.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lLayout_mainProgressView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15.0dip"
    app:rv_radius="4dp"
    app:rv_rippleEnable="false">

    <ProgressBar
        android:id="@+id/pb_mainProgressView"
        android:layout_width="35.0dip"
        android:layout_height="35.0dip"
        android:indeterminateBehavior="repeat"
        android:indeterminateOnly="true" />

    <TextView
        android:id="@+id/tv_loadingProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15.0dip"
        android:textColor="#ff393939"
        android:textSize="14.0dip"
        android:visibility="gone" />
</com.zhowin.library.radius.RadiusLinearLayout>