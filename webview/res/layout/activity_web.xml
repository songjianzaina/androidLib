<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.insworks.lib_cloudbase.webview.WebActivity">


    <com.inswork.lib_cloudbase.titlebar.CloudpayTitleBar

        android:id="@+id/tb_web_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_top_bg3"
        app:title="加载中">

    </com.inswork.lib_cloudbase.titlebar.CloudpayTitleBar>


    <ProgressBar
        android:id="@+id/pb_web_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:progressDrawable="@drawable/bg_web_progress_bar"
        android:visibility="visible" />


    <WebView
        android:id="@+id/wv_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>